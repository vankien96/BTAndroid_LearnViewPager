<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanki.learnviewpager.Tab2Fragment">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="@drawable/img_avatar"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgAvatar"
                android:text="LINH KA, 23"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:text="Viet Nam"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="8dp"
                />
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocation"
                android:text="Turn that trick to make a litle leeway beat that nic but not the way that we play Dog"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="8dp"
                />
            <LinearLayout
                android:id="@+id/llFriend"
                android:layout_below="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:weightSum="5">
                <TextView
                    android:id="@+id/tvFriendLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvFriendValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="47"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAverage"
                android:layout_below="@+id/llFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:weightSum="5">
                <TextView
                    android:id="@+id/tvAverageLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avarage"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvAverageValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="6.9"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_below="@id/llAverage"
                android:text="Discovery setting"/>
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>
